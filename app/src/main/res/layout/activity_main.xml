<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="it.fuyk.com.androidrecord.MainActivity">

    <it.fuyk.com.androidrecord.customview.customcode.CustomTitleView
        app:titleColor="@color/colorPrimary"
        app:titleSize="20sp"
        app:titleText="小样"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <it.fuyk.com.androidrecord.customview.customcode.CustomProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:firstColor="#ff00ff"
        app:secondColor="#00ff00"
        app:circleWidth="50dp"
        app:speed="30"
        />

</RelativeLayout>
